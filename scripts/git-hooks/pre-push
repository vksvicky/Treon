#!/usr/bin/env bash
set -euo pipefail

echo "Running pre-push checks..."

# Ensure we run from repo root
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "$REPO_ROOT"

if ! bash scripts/ci_check.sh; then
  echo ""
  echo "❌ Pre-push check failed!"
  echo "Fix file/function size issues before pushing."
  echo ""
  exit 1
fi

echo "✅ Pre-push checks passed!"
exit 0


